! Xft.dpi: 120

!===============================================================================
! Font
!===============================================================================

! Better looking font for applications that ignore fontconfig.
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb


!===============================================================================
! Cursor
!===============================================================================

! Set the cursor size.
Xcursor.size:  8
