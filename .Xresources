!===============================================================================
! urxvt
!===============================================================================

! Disable scroll bar
URxvt*scrollBar: false

! Font
URxvt*font: xft:monospace:size=10
URxvt.letterSpace: -1

! Disable keycap picture insert mode
URxvt.iso14755: false
URxvt.iso14755_52: false

!===============================================================================
! Colors
!===============================================================================

*foreground: #dadada
*background: #20303b

! Black
*color0:  #20303b
*color8:  #40505b
! Red
*color1:  #FF33C2
*color9:  #FF59F1
! Green
*color2:  #5fd700
*color10: #7ff720
! Yellow
*color3:  #d7d700
*color11: #f7f720
! Blue
*color4:  #00afff
*color12: #20cfff
! Purple
*color5:  #D933FF
*color13: #f020ff
! Cyan
*color6:  #00ffc8
*color14: #20ffe8
! White
*color7:  #dddddd
*color15: #fdfdfd


!===============================================================================
! Font
!===============================================================================

! Better looking font for applications that ignore fontconfig.
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb


!===============================================================================
! Cursor
!===============================================================================

! Set the cursor size.
Xcursor.size:  8
