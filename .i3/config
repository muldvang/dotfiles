client.focused          #5E801A #5E801A #ffffff #66d9ef # Green
client.focused_inactive #367480 #367480 #ffffff #66d9ef # Blue
client.unfocused        #000000 #000000 #ffffff #66d9ef # Black
client.urgent           #80133A #80133A #ffffff #66d9ef # Red
