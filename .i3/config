bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 0

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 3 px or 3 ppt
        bindsym j resize grow height 3 px or 3 ppt
        bindsym k resize shrink height 3 px or 3 ppt
        bindsym l resize grow width 3 px or 3 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 3 px or 3 ppt
        bindsym Down resize grow height 3 px or 3 ppt
        bindsym Up resize shrink height 3 px or 3 ppt
        bindsym Right resize grow width 3 px or 3 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Alternative resize method that does not use a mode.
bindsym $mod+Mod1+h resize shrink width 3 px or 3 ppt
bindsym $mod+Mod1+j resize grow height 3 px or 3 ppt
bindsym $mod+Mod1+k resize shrink height 3 px or 3 ppt
bindsym $mod+Mod1+l resize grow width 3 px or 3 ppt

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
        status_command i3blocks
        mode dock
        font pango:sans, fontawesome 9
        colors {
                background #ededed
                statusline #2e3436

                # Workspaces       Border  Backgr. Text
                focused_workspace  #4a90d9 #4a90d9 #2e3436
                active_workspace   #a5a5a1 #a5a5a1 #2e3436
                inactive_workspace #ededed #ededed #2e3436
                urgent_workspace   #cc0000 #cc0000 #2e3436
        }
}

