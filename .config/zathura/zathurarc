set window-title-basename true
set window-title-page
set guioptions ""
set page-cache-size 100
set font "sans 9"
set first-page-column 2
set scroll-step 60
set selection-clipboard clipboard


# Defines the background color that is used for command line completion entries
set completion-bg "#EDEDED"

# Defines the foreground color that is used for command line completion entries
set completion-fg "#2E3436"

# Defines the background color that is used for command line completion group
# elements
set completion-group-bg "#EDEDED"

# Defines the foreground color that is used for command line completion group
# elements
set completion-group-fg "#2E3436"

# Defines the background color that is used for the current command line
# completion element
set completion-highlight-bg "#ADADAD"

# Defines the foreground color that is used for the current command line
# completion element
set completion-highlight-fg "#2E3436"

# Defines the default foreground color
set default-fg "#2E3436"

# Defines the default background color
set default-bg "#EDEDED"

# Defines the background color for the inputbar
set inputbar-bg "#EDEDED"

# Defines the foreground color for the inputbar
set inputbar-fg "#2E3436"

# Defines the background color for a notification
set notification-bg "#EDEDED"

# Defines the foreground color for a notification
set notification-fg "#2E3436"

# Defines the background color for an error notification
set notification-error-bg "#A52A2A"

# Defines the foreground color for an error notification
set notification-error-fg "#EDEDED"

# Defines the background color for a warning notification
set notification-warning-bg "#A020F0"

# Defines the foreground color for a warning notification
set notification-warning-fg "#EDEDED"

# Defines the background color of the statusbar
set statusbar-bg "#EDEDED"

# Defines the foreground color of the statusbar
set statusbar-fg "#2E3436"

# Defines the color that is used for highlighting parts of the document (e.g.:
# show search results)
set highlight-color "#a1efe4"

# Defines the color that is used to show the current selected highlighted
# element (e.g: current search result)
set highlight-active-color "#66d9ef"

# Defines the foreground color of the index mode.
set index-fg "#2E3436"

# Define the background color of the index mode.
set index-bg "#EDEDED"

# Defines the foreground color of the selected element in index mode.
set index-active-fg "#2E3436"

# Define the background color of the selected element in index mode.
set index-active-bg "#ADADAD"

set recolor-keephue true
set recolor-darkcolor "#000000"
set recolor-lightcolor "#CCCCCC"
