# Settings
set home-page=about:blank
set download-path=/home/muldvang/Downloads/
set minimumfontsize=9pt
set accelerated-compositing=false
set dns-prefetching=true
set webgl=false
set webinspector=true
set download-command=/bin/sh -c "diana add --load-cookies $VIMB_COOKIES %s"
set download-use-external=false

# GUI
set statusbar=false
set completion-font=sans normal 10
set input-font-error=sans bold 10
set input-font-normal=sans normal 10
set status-font=sans bold 10
set status-ssl-font=sans bold 10
set status-sslinvalid-font=sans bold 10

# Search engines
shortcut-add g=https://google.com/search?q=$0
shortcut-add i=https://google.com/search?q=$0&tbm=isch
shortcut-add ord=http://www.ordbogen.com/opslag.php?word=$0&dict=auto
shortcut-add aur=https://aur.archlinux.org/packages/?O=0&K=$0
shortcut-add y=https://www.youtube.com/results?search_query=$0
shortcut-add cpp=http://en.cppreference.com/mwiki/index.php?title=Special:Search&search=$0
shortcut-default g

# Custom keyboard mappings
nmap i gi
nmap + zI
nmap - zO
nmap 0 zz

